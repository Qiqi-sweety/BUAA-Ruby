<div style="height:20px"> </div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <%= link_to items_path, method: :get do %>
      <button class="nav-link" id="home-tab" data-toggle="tab" data-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">商品列表</button>
    <% end %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to new_item_path, method: :get do %>
      <button class="nav-link active" id="profile-tab" data-toggle="tab" data-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">添加商品</button>
    <% end %>
  </li>
</ul>
<div style="height:30px"> </div>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div style="width: 600px; margin-left:auto;margin-right:auto;">
      <div class="d-flex flex-column justify-content-center mt-4"
        style="border: 1px solid black; border-radius: 20px;">
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <div class="m-4" style="display: flex; flex-direction: column;">
          <%= render "form", item: @item %>
        </div>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
</div>


