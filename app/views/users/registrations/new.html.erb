<div style="height:20px"> </div>


<div style="min-width: 800px">
  <div class="container d-flex flex-column justify-content-center my-5"
    style="border: 5px solid black; border-radius: 60px; width: 600px;">
    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
      <h1 class="my-4">注册</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
            <%= f.label "身份选择：", :class => "form-label" %>

            <%= f.radio_button :type, 1, :checked => true %>
            <%= f.label "客户" %>

            <%= f.radio_button :type, 2 %>
            <%= f.label "商家" %>

            <%= f.radio_button :type, 3 %>
            <%= f.label "骑手" %>
        </div>

        <div style="height:10px"> </div>

        <div class="field">
          <%= f.label "用户名：    " %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
        </div>

        <div style="height:10px"> </div>

        <div class="field">
          <%= f.label "输入密码：  " %>
          
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div style="height:10px"> </div>

        <div class="field">
          <%= f.label "确认密码：" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div style="height:10px"> </div>

        <div class="field d-flex align-items-center mb-4">
          <div class="me-4" style="width: 80px;">
            <%= f.label "地址", :class => "form-label" %>
          </div>
          
          <%= f.text_field :address, autofocus: true, :class => "form-control", :style => "width: 250px;", :required => 'required' %>
        </div>

        <div class="actions">
          <%= f.submit "注册" ,:style => "width: 100px;", :required => 'required' %>
        </div>
      <% end %>

      <div style="height:20px"> </div>

      <%= render "users/shared/links" %>

      <div style="height:20px"> </div>
    </div>
  </div>
</div>